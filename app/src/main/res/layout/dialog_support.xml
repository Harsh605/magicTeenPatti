<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/colormain"
    app:cardCornerRadius="10dp"
    >

     <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/payu_dimen_55dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="#dac260"
                android:layout_marginBottom="20dp"
                >

                <TextView
                    android:id="@+id/tv_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="TITTLE"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp7"
                    android:paddingTop="@dimen/dp7"
                    android:layout_gravity="center_vertical"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    app:fontFilePath="@string/Helvetica_Bold_Extra"
                    />

                <ImageView
                    android:id="@+id/ivClose"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_close_new"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:orientation="horizontal">

                <!-- <ImageView
                    android:id="@+id/fbLink"
                    android:layout_width="@dimen/dp50"
                    android:layout_height="@dimen/dp50"
                    android:src="@drawable/ic_sc_facebook_1" /> -->

                <ImageView
                    android:id="@+id/googleLink"
                    android:layout_width="@dimen/dp50"
                    android:layout_height="@dimen/dp50"
                    android:src="@drawable/gmail" />

                <!-- <ImageView
                    android:id="@+id/twitterLink"
                    android:layout_width="@dimen/dp50"
                    android:layout_height="@dimen/dp50"
                    android:visibility="gone"
                    android:src="@drawable/ic_sc_twitter_1" />

                <ImageView
                    android:id="@+id/linkdnLink"
                    android:layout_width="@dimen/dp50"
                    android:layout_height="@dimen/dp50"
                    android:visibility="gone"
                    android:src="@drawable/ic_sc_linkedin_1" /> -->

                <!-- <ImageView
                    android:id="@+id/instaLink"
                    android:layout_width="@dimen/dp50"
                    android:layout_height="@dimen/dp50"
                    android:src="@drawable/ic_sc_instagram_1" /> -->

                <!-- <ImageView
                    android:id="@+id/skypeLink"
                    android:layout_width="@dimen/dp50"
                    android:layout_height="@dimen/dp50"
                    android:visibility="gone"
                    android:src="@drawable/ic_sc_skype_1" /> -->

                <ImageView
                    android:id="@+id/telegramLink"
                    android:layout_width="@dimen/dp50"
                    android:layout_height="@dimen/dp50"
                    android:visibility="gone"
                    android:src="@drawable/ic_sc_telegram_1" /> 

                <ImageView
                    android:id="@+id/whatsApp"
                    android:layout_width="@dimen/dp50"
                    android:layout_height="@dimen/dp50"
                    android:padding="6dp"
                    android:src="@drawable/ic_whatsapp"/>

            </LinearLayout>



        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>